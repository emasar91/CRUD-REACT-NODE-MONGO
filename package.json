{
	"name": "crud-react-node-mongodb",
	"version": "1.0.0",
	"description": "CRUD API",
	"main": "server.js",
	"scripts": {
		"start": "node server.js",
		"build": "cd ./client && npm i && npm run build && cd ..",
		"build-local": "cd ./client && npm i && npm run build:local && cd ..",
		"local:server": "NODE_ENV=local nodemon server.js",
		"local:client": "cd ./client && NODE_ENV=local npm start",
		"local": "concurrently \"npm run local:server\" \"npm run local:client\"",
		"install": "cd ./client && npm i && cd .. npm i",
		"prettier-all": "prettier --write '**/*.{js,css,json,md}'",
		"eslint": "eslint .",
		"eslint-all": "eslint .",
		"prepare": "husky install",
		"pre-commit": "lint-staged"
	},
	"devDependencies": {
		"concurrently": "^5.3.0",
		"eslint": "^7.24.0",
		"eslint-config-standard": "^16.0.2",
		"eslint-plugin-import": "^2.22.1",
		"eslint-plugin-node": "^11.1.0",
		"eslint-plugin-promise": "^4.3.1",
		"husky": "^6.0.0",
		"lint-staged": "^10.5.4",
		"mongodb-memory-server": "^6.9.6",
		"nodemon": "^2.0.4",
		"prettier": "^2.1.1"
	},
	"dependencies": {
		"@koa/cors": "^3.1.0",
		"any-promise": "^1.3.0",
		"app-module-path": "^2.2.0",
		"bluebird": "^3.5.1",
		"common-tags": "^1.4.0",
		"config": "^1.28.1",
		"find-root": "^1.1.0",
		"js-yaml": "^3.14.0",
		"koa": "^2.3.0",
		"koa-body": "^2.5.0",
		"koa-bodyparser": "^4.2.1",
		"koa-morgan": "^1.0.1",
		"koa-mount": "^4.0.0",
		"koa-passport": "^5.0.0",
		"koa-router": "^7.2.0",
		"koa-session": "^5.12.0",
		"koa-static": "^5.0.0",
		"koa-static-server": "^1.5.2",
		"lodash": "^4.17.20",
		"mongoose": "^5.9.5",
		"mongoose-unique-validator": "^2.0.3",
		"nconf": "^0.12.0",
		"raven": "^2.2.1",
		"require-directory": "^2.1.1",
		"traverse": "^0.6.6",
		"winston": "^3.3.3",
		"winston-console-formatter": "^0.3.1"
	},
	"eslintConfig": {
		"env": {
			"node": true
		},
		"parserOptions": {
			"sourceType": "script"
		},
		"extends": "standard",
		"rules": {
			"indent": "off",
			"no-var": "error",
			"prefer-const": "error",
			"no-console": "error",
			"func-names": [
				"error",
				"as-needed"
			],
			"strict": [
				"error",
				"global"
			],
			"space-before-function-paren": 2
		}
	},
	"lint-staged": {
		"*.{js,css,json,md}": [
			"prettier --write",
			"git add"
		],
		"*.js": [
			"eslint --fix",
			"git add"
		]
	},
	"repository": {
		"type": "git",
		"url": "git+https://github.com/emasar91/CRUD-REACT-NODE-MONGO.git"
	},
	"author": "Emanuel Sarco",
	"license": "ISC",
	"bugs": {
		"url": "https://github.com/emasar91/CRUD-REACT-NODE-MONGO/issues"
	},
	"homepage": "https://github.com/emasar91/CRUD-REACT-NODE-MONGO#readme"
}
